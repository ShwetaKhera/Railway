<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">


     <TextView
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:id="@+id/textView2"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true"
         android:textColor="#fff"
         android:textSize="20sp"
         android:textAlignment="center"
         android:gravity="center" />

     <Button
         android:text="Sign Out"
         android:layout_width="100dp"
         android:layout_height="50dp"
         android:layout_alignParentTop="true"
         android:id="@+id/sign_out"
         android:layout_alignParentEnd="true"
         android:layout_toEndOf="@+id/textView2"
         android:background="#000"
         android:onClick="onClick"
         android:textColor="#fff"
         android:textSize="20sp" />

   <Button
        android:text="Give Us Your Feedback !"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/feedback"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ddd"
        android:background="#000"
        android:onClick="onClick" />

    <Button
        android:text="Order Food"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/food_order"
        android:background="#000"
        android:textColor="#ddd"
        android:textSize="20sp"
        android:onClick="onClick"
        android:layout_below="@+id/records"
        android:layout_alignStart="@+id/records"
        android:layout_marginTop="20dp" />

    <Button
        android:text="My Order"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/food_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/morder"
        android:background="#000"
        android:onClick="onClick"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:text="Train Routes"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:id="@+id/train_routes"
        android:background="#000"
        android:textColor="#ddd"
        android:textSize="20sp"
        android:onClick="onClick"
        android:layout_below="@+id/book_ticket"
        android:layout_alignStart="@+id/book_ticket" />

    <Button
        android:text="Booking Cancellation"
        android:layout_height="50dp"
        android:id="@+id/ticket_cancellation"
        android:background="#000"
        android:textColor="#ddd"
        android:textSize="20sp"
        android:onClick="onClick"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/train_routes"
        android:layout_alignStart="@+id/feedback" />

    <Button
        android:text="Booking Records"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/records"
        android:background="#000"
        android:textColor="#ddd"
        android:textSize="20sp"
        android:onClick="onClick"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ticket_cancellation"
        android:layout_alignStart="@+id/train_routes" />

    <Button
        android:text="Book Tickets"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="54dp"
        android:id="@+id/book_ticket"
        android:background="#000"
        android:textColor="#ddd"
        android:textSize="20sp"
        android:onClick="onClick"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/morder" />


</RelativeLayout>
