<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="CREDIT CARD PAYMENT"
        android:layout_width="450dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView15"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25sp"
        android:background="#000"
        android:textColor="#fff"/>

    <TextView
        android:text="Name :"
        android:layout_height="30dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="76dp"
        android:id="@+id/textView16"
        android:layout_width="80dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:gravity="bottom"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentEnd="true"
        android:layout_width="280dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/cvv"
        android:gravity="bottom"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

    <TextView
        android:text="Expiration Date :"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/textView18"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_below="@+id/cvv"
        android:layout_alignStart="@+id/textView17" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:gravity="bottom"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Card Number :"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textSize="20sp"
        android:layout_marginTop="39dp"
        android:layout_width="130dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/textView16" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:text="CVV :"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_width="80dp"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView20" />

    <Button
        android:text="Proceed And Pay"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:id="@+id/submit_debit"
        android:background="#000000"
        android:textColor="#fff"
        android:textSize="20sp"
        android:onClick="onClick"
        android:layout_width="450dp"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true" />


</RelativeLayout>
